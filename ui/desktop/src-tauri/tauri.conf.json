{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data Guardian",
  "identifier": "com.penguinx.dataguardian",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "app": {
    "withGlobalTauri": true
  },
  "plugins": {
    "window-state": {
      "default": {
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "maximized": false
      }
    }
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "event": {
        "all": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.penguinx.dataguardian",
      "icon": ["icons/icon.png"]
    },
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; script-src 'self'; connect-src 'self'; font-src 'self';"
    },
    "windows": [
      {
        "title": "Data Guardian",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}
