{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data Guardian Desktop",
  "version": "0.1.0",
  "identifier": "com.dataguardian.desktop",
  "build": {
    "beforeBuildCommand": "npm --prefix ../ui run build",
    "beforeDevCommand": "npm --prefix ../ui run tauri:dev",
    "devUrl": null,
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Data Guardian",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "appimage", "deb", "msi"],
    "resources": ["../resources/**"],
    "macOS": {
      "minimumSystemVersion": "11",
      "signingIdentity": "See packaging/macos/SIGNING.md",
      "entitlements": null,
      "exceptionDomain": "localhost",
      "license": null,
      "universal": true
    },
    "linux": {
      "deb": {
        "depends": ["libgtk-3-0", "libgdk-pixbuf2.0-0", "libayatana-appindicator3-1"]
      }
    },
    "windows": {
      "allowUnsigned": true,
      "wix": {
        "language": "en-US"
      },
      "signingCertificate": "See packaging/windows/SIGNING.md"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/data-guardian/data-guardian/releases/latest/download/latest.json"
      ],
      "pubkey": "<REPLACE-WITH-TAURI-UPDATER-PUBKEY>",
      "windows": {
        "installMode": "passive"
      }
    },
    "shell": {
      "commands": {
        "system-shell": {
          "cmd": {
            "linux": "/bin/bash",
            "macos": "/bin/zsh",
            "windows": "powershell.exe"
          },
          "args": {
            "linux": ["-l"],
            "macos": ["-l"],
            "windows": ["-NoLogo"]
          }
        }
      }
    },
    "store": {}
  }
}
