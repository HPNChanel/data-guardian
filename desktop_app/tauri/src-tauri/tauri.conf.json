{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data Guardian Desktop",
  "version": "0.1.0",
  "identifier": "com.dataguardian.desktop",
  "build": {
    "beforeBuildCommand": "npm --prefix ../ui run build",
    "beforeDevCommand": "npm --prefix ../ui run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../ui/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Data Guardian",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": [
          "*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "appimage",
      "deb",
      "msi"
    ],
    "macOS": {
      "minimumSystemVersion": "11",
      "signingIdentity": "See packaging/macos/SIGNING.md",
      "entitlements": null,
      "exceptionDomain": "localhost"
    },
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libgdk-pixbuf2.0-0",
          "libayatana-appindicator3-1"
        ]
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/data-guardian/data-guardian/releases/latest/download/latest.json"
      ],
      "pubkey": "<REPLACE-WITH-TAURI-UPDATER-PUBKEY>",
      "windows": {
        "installMode": "passive"
      }
    },
    "shell": {
      "open": true
    }
  }
}
